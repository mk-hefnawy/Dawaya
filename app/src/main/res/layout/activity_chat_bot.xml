<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Tool Bar -->
    <RelativeLayout
        android:id="@+id/c_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:id="@+id/back_from_chat_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/baseline_arrow_back_ios_black_24"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/back_from_chat_bot"
            >

        <ImageView
            android:id="@+id/bot_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/baseline_arrow_back_ios_black_24"
            />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:elevation="@dimen/_30sdp"


                android:layout_marginEnd="15dp"
                android:layout_marginBottom="2dp"


                android:src="@drawable/online_green_circle" />

        </RelativeLayout>
        <TextView
            android:id="@+id/cart_title"

            android:text="PharmaBot"
            android:textSize="@dimen/_20sdp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_alignTop="@id/back_from_my_cart"

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>