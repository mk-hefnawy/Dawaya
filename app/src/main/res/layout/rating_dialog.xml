<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_margin="@dimen/_10sdp">

    <TextView
        android:text="@string/rate_that_order"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/_15sdp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp">

        <ImageView
            android:id="@+id/sad_feedback"
            android:src="@drawable/outline_sentiment_dissatisfied_black_48"

            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/neutral_feedback"
            android:src="@drawable/outline_sentiment_neutral_black_48"

            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/happy_feedback"
            android:src="@drawable/outline_sentiment_satisfied_alt_black_48"

            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>