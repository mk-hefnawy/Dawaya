<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginLeft="25dp"
    android:layout_marginTop="65dp"
    android:layout_marginRight="25dp"
    >


    <TextView
        android:id="@+id/add_phone_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/add_phone_number"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"

      android:layout_gravity="center"

        android:layout_margin="@dimen/_15sdp"
        />


    <!-- Phone Number Container -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/add_phone_number_container"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

     android:layout_margin="@dimen/_15sdp"



        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_phone_number_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="New Phone Number"
            android:textSize="@dimen/_16sdp"

            android:selectAllOnFocus="true"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/add_phone_number_ok_cancel_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/_10sdp"
        android:layout_gravity="center"

       >

        <TextView
            android:id="@+id/add_phone_number_cancel"

            android:text="@string/cancel"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="sans-serif-medium"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/add_phone_number_ok"

            android:text="@string/ok"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="sans-serif-medium"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"

            />


    </LinearLayout>
</LinearLayout>