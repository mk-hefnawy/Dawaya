<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:gravity="center_horizontal"

    android:layout_margin="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginBottom="@dimen/_20sdp"

    app:cardCornerRadius="@dimen/_15sdp">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="@dimen/_10sdp"
    >


<LinearLayout

    android:id="@+id/peripherals"
    android:orientation="horizontal"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    >
<LinearLayout

    android:orientation="vertical"

    android:layout_width="0dp"
    android:layout_height="wrap_content"

    android:layout_weight="3">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/order_total_price"

        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/order_time"
        android:textSize="@dimen/_15sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/order_id"

        android:text="12344212"
        android:textSize="@dimen/_12sdp"

        />

</LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:id="@+id/order_image"

        android:layout_weight="2"
        android:contentDescription="@string/order_image"

        android:src="@mipmap/order_done"
        />
</LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/orders_reorder"

            android:text="@string/reorder"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"

            app:drawableEndCompat="@drawable/outline_redo_black_24"
            android:drawablePadding="@dimen/_10sdp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_8sdp"
            />


        <TextView
            android:id="@+id/order_feedback"

            android:text="@string/feedback"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"

            app:drawableEndCompat="@drawable/outline_chat_24"
            android:drawablePadding="@dimen/_8sdp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            />


        <TextView
            android:id="@+id/order_rate"

            android:text="@string/rate"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"

            app:drawableEndCompat="@drawable/outline_sentiment_satisfied_alt_24"
            android:drawablePadding="@dimen/_8sdp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"

            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            />
    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>